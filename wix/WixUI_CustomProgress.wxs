<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Fragment>
    <UI>
      <!-- Override the default InstallProgress dialog -->
      <Dialog Id="InstallProgressDlg" Width="370" Height="270" Title="Fortuna Faucet Installation" Modeless="yes">
        <Control Id="Title" Type="Title" X="20" Y="6" Width="330" Height="18" Text="Installation Progress" />
        <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="WixUI_Bmp_Banner" />
        <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="&amp;Back" Disabled="yes" />
        <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Text="&amp;Next" Disabled="yes" />
        <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Text="Cancel" />

        <Control Id="ActionText" Type="Text" X="70" Y="80" Width="280" Height="20" TabSkip="no">
          <Subscribe Event="ActionText" Attribute="Text" />
        </Control>
        <Control Id="Description" Type="Text" X="35" Y="55" Width="300" Height="20" Text="Please wait while the installer copies files." />

        <!-- This is the new control to display the current filename -->
        <Control Id="CurrentFileText" Type="Text" X="70" Y="100" Width="280" Height="20">
            <Subscribe Event="SetProgress" Attribute="Text" />
        </Control>

        <Control Id="ProgressBar" Type="ProgressBar" X="35" Y="120" Width="300" Height="10" ProgressBlocks="yes" Text="Progress">
          <Subscribe Event="SetProgress" Attribute="Progress" />
        </Control>
      </Dialog>

      <!-- The Publish element must be a child of UI, not Dialog -->
      <Publish Dialog="InstallProgressDlg" Control="Cancel" Event="SpawnDialog" Value="CancelDlg">1</Publish>
    </UI>
  </Fragment>
</Wix>
