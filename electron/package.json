{
  "name": "fortuna-faucet",
  "version": "1.0.0",
  "description": "Fortuna Faucet - Racing Analysis Engine",
  "main": "main.js",
  "homepage": "./",
  "author": "JBMason",

  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dev": "electron ."
  },

  "build": {
    "appId": "com.fortuna.faucet",
    "productName": "Fortuna Faucet",
    "files": [
      "main.js",
      "preload.js",
      "assets/**/*",
      "web-ui-build/out/**/*",
      "resources/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/fortuna-backend.exe",
        "to": "resources/fortuna-backend.exe"
      }
    ],
    "win": {
      "target": "msi",
      "icon": "assets/icon.ico"
    },
    "msi": {
      "oneClick": false,
      "perMachine": true,
      "createDesktopShortcut": true
    }
  },

  "dependencies": {},

  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
