<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs"
     xmlns:bal="http://wixtoolset.org/schemas/v4/wxs/bal">

  <Bundle Name="Fortuna Faucet"
          Version="1.0.0.0"
          Manufacturer="Fortuna Engineering"
          UpgradeCode="YOUR-UNIQUE-GUID-HERE">

    <BootstrapperApplication>
      <bal:WixStandardBootstrapperApplication
        Theme="hyperlink"
        LocalizationFile="path/to/your/custom/localization.wxl" />
    </BootstrapperApplication>

    <Chain>
      <MsiPackage
        Id="WebService"
        SourceFile="path/to/your/WebService.msi"
        Vital="yes" />
      <MsiPackage
        Id="ElectronApp"
        SourceFile="path/to/your/ElectronApp.msi"
        Vital="yes" />
    </Chain>
  </Bundle>
</Wix>