<Project Sdk="WixToolset.Sdk/4.0.0">
  <ItemGroup>
    <PackageReference Include="WixToolset.Heat" Version="4.0.0" />
  </ItemGroup>

  <Target Name="GenerateFrontendWxs">
    <HeatDirectory
        Directory="staging\ui"
        OutputFile="frontend_components.wxs"
        ComponentGroupName="FrontendComponents"
        DirectoryRefId="INSTALLFOLDER"
        SuppressRootDirectory="true"
        PreprocessorVariables="wix.FrontendSourceDir=staging\ui" />
  </Target>
</Project>
